@model InventoryManagementSystemDomain.Entity.Purchase



@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>


<h4>Add Orders </h4>
<hr />
<div class="col-sm-12">
    <div class="card">
        <form enctype="multipart/form-data" asp-action="Create">
             <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                    <label asp-for="SupplierName" class="control-label"></label>
                    <input asp-for="SupplierName" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="PurchaseDate" class="control-label"></label>
                    <input asp-for="PurchaseDate" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="EntryDate" class="control-label"></label>
                    <input asp-for="EntryDate" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="EntryBy" class="control-label"></label>
                    <input asp-for="EntryBy" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="form-group col-sm-3">
                    <label asp-for="Remark" class="control-label"></label>
                    <input asp-for="Remark" class="form-control" />
                </div>
        </div>

        <table class="col-md-12">
            <table id ="ExpTable" class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>
                        Item Code 
                    </th>
                    <th>
                        Item Quantity
                    </th>
                    <th>
                        Item Unit Id
                    </th>
                    <th>
                        Item Rate
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>

            <tbody>
                @*@foreach (var item in Model.PurchaseDetails)*@
                @for(int i=0;i<Model.PurchaseDetails.Count;i++)
                {
                    <tr>
                        <td>
                            @Html.EditorFor(x=>x.PurchaseDetails[i].ItemCode,new{htmlAttributes=new{@class="form-control"}})
                            @*<input asp-for="@item.ItemCode" />*@
                        </td>
                        <td>
                            @Html.EditorFor(x=>x.PurchaseDetails[i].ItemQty,new{htmlAttributes=new{@class="form-control"}})

                           @* <input asp-for="@item.ItemQty" />*@
                        </td>
                        <td>
                            @Html.EditorFor(x=>x.PurchaseDetails[i].ItemUnitId,new{htmlAttributes=new{@class="form-control"}})

                           @* <input asp-for="@item.ItemUnitId" />*@
                        </td>
                        <td>
                            @Html.EditorFor(x=>x.PurchaseDetails[i].ItemRate,new{htmlAttributes=new{@class="form-control"}})

                            @*<input asp-for="@item.ItemRate" />*@
                        </td>

                        <td>
                            <button id="btnadd-@i" type="button" claas="btn btn-sm btn--primary"
                            onclick="AddItem(this)">Add</button>
                                <button id="btnremove-@i" type="button" claas="btn btn-sm btn-primary"
                            onclick="DeleteItem(this)">Delete</button>

                        </td>
                    </tr>
                }

            </tbody>

        </table>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <input type="hidden" id="hdnLastIndex" value="0"/>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">

        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });



        function DeleteItem(btn) {
            $(btn).closest('tr').remove();
        }



        function AddItem(btn) {

            var table = document.getElementById('ExpTable');
            var rows = table.getElementsByTagName('tr');

            var rowOuterHtml = rows[rows.length - 1].outerHTML;

            var lastrowIdx = document.getElementById('hdnLastIndex').value;

            var nextrowIdx = eval(lastrowIdx) + 1;

            document.getElementById('hdnLastIndex').value = nextrowIdx;

            rowOuterHtml = rowOuterHtml.replaceAll('_' + lastrowIdx + '_', '_' + nextrowIdx + '_');
            rowOuterHtml = rowOuterHtml.replaceAll('[' + lastrowIdx + ']', '[' + nextrowIdx + ']');
            rowOuterHtml = rowOuterHtml.replaceAll('-' + lastrowIdx, '-' + nextrowIdx);


            var newRow = table.insertRow();
            newRow.innerHTML = rowOuterHtml;



            var btnAddID = btn.id;
            var btnDeleteid = btnAddID.replaceAll('btnadd', 'btnremove');

            var delbtn = document.getElementById(btnDeleteid);
            delbtn.classList.add("visible");
            delbtn.classList.remove("invisible");


            var addbtn = document.getElementById(btnAddID);
            addbtn.classList.remove("visible");
            addbtn.classList.add("invisible");

        }

    </script>
}

